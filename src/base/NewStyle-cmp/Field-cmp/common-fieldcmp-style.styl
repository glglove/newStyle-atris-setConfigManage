>>>.el-form-item__error {
  left: 120px;
}

>>>.el-form-item {
  width: 100% !important;
  overflow auto
  margin: 10px 0 20px 0 !important;
}

.filedContentWrap {
  width: 100%;
  .titWrap {
    // width:120px;   // 在组件中width写的是动态的
    .tit {
      position: relative;
      // min-width: 120px; 
      display: inline-block;
      text-align: right;
      padding: 0 20px 0 0;
      box-sizing: border-box;
      .fieldRequiredIcon {
        position: absolute;
        top: 4px;
        right: 7px;
      }
      >>>.el-tooltip.el-icon-info {
        position: absolute;
        top: 15px;
        right: 2px;
        font-size: 12px !important;
      }
    }
  }
  .fieldValueWrap {
    position: relative;
    // width: calc(100% - 120px);  // 在组件中width写的是动态的
    min-width: 50px;
    color: #909399;
    min-height: 15px;
    &.showValue {
      line-height: 16px;
    }
    .fieldValue{
      width: 100% !important;
      .fieldValue-num {
        width: 48%
      }
      .fieldValue-mark {
        display: inline-block;
        width: 4%;
        padding: 0 5px;
        box-size: border-box;
      }
    }
    .shade {
      position absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: #F5F7FA;
      opacity: .7;
      &:hover {
        cursor: not-allowed;
      }
    }
  }
}